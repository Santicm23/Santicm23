---
import SocialButton from "../components/buttons/SocialButton.astro"
import GitHubIcon from "../components/icons/GitHubIcon.astro"
import LinkedInIcon from "../components/icons/LinkedInIcon.astro"
---

<section id="home" class="relative z-10 h-screen w-full">
	<h2
		class="relative left-1/2 top-1/2 w-2/3 -translate-x-1/2 -translate-y-1/2 animate-tracking-in-expand text-center text-3xl font-medium text-gray-900 [text-wrap:balance] dark:text-gray-50 sm:text-6xl"
	>
		Hi! my name is{" "}
		<span
			class="inline-flex bg-gradient-to-r from-neutral-900 via-slate-500 to-neutral-500 bg-[200%_auto] bg-clip-text leading-loose text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400"
		>
			Santiago
		</span>
	</h2>
	<div class="absolute left-20 top-0 flex h-full flex-col justify-center gap-20">
		<SocialButton href="https://github.com/Santicm23" name="GitHub">
			<GitHubIcon
				class="w-8 duration-200 hover:scale-125 hover:stroke-indigo-400 dark:stroke-neutral-100 dark:hover:stroke-indigo-400"
			/>
		</SocialButton>
		<SocialButton href="https://www.linkedin.com/in/santiago-castro-muÃ±oz/" name="LinkedIn">
			<LinkedInIcon
				class="w-8 duration-200 hover:scale-125 hover:stroke-indigo-400 dark:stroke-neutral-100 dark:hover:stroke-indigo-400"
			/>
		</SocialButton>
	</div>
</section>
