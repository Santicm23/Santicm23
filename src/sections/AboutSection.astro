---
import SectionTitle from "@/components/text/SectionTitle.astro"
import BouncyLoader from "@/components/loaders/BouncyLoader.astro"
import BentoGrid from "@/components/containers/BentoGrid.astro"
import BentoGridItem from "@/components/containers/BentoGridItem.astro"
import Vinyl from "@/components/others/Vinyl.astro"
import Chip from "@/components/text/Chip.astro"
import IconCloud from "@/components/others/IconCloud.tsx"

const slugs = [
  "typescript",
  "java",
  "python",
	"cplusplus",
  "rust",
  "dart",
	"kotlin",
  "react",
	"angular",
	"astro",
  "android",
  "flutter",
  "nextdotjs",
  "tailwindcss",
  "express",
	"nestjs",
	"fastapi",
	"springboot",
	"rabbitmq",
  "nginx",
  "prisma",
	"poetry",
	"selenium",
  "git",
  "docker",
  "github",
	"tensorflow",
	"scikitlearn",
];
---

<section id="about" class="relative z-10 mx-auto min-h-screen w-2/3 p-20">
	<SectionTitle>
		About me
		<BouncyLoader class="absolute left-full -translate-x-5 -translate-y-3" />
	</SectionTitle>
	<BentoGrid>
		<BentoGridItem class="col-span-3 row-span-3">
			<Chip slot="header">Me</Chip>
		</BentoGridItem>
		<BentoGridItem class="col-span-3 row-span-3">
			<Chip slot="header">Experience</Chip>
		</BentoGridItem>
		<BentoGridItem class="col-span-2 row-span-3">
			<Chip slot="header">Education</Chip>
		</BentoGridItem>
		<BentoGridItem class="col-span-2">
			<div slot="title" class="flex h-full items-center">
				<Vinyl />
			</div>
		</BentoGridItem>
		<BentoGridItem class="col-span-2 row-span-3">
			<Chip slot="header">Stack</Chip>
			<div slot="title">
				<IconCloud iconSlugs={slugs} client:only />
			</div>
		</BentoGridItem>
		<BentoGridItem class="col-span-2 row-span-2">
			<Chip slot="header">Hobbies</Chip>
		</BentoGridItem>
	</BentoGrid>
</section>
