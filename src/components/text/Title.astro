---
import { getLangFromUrl, useTranslations } from "@/utils/i18n"
import ColombiaIcon from "../icons/ColombiaIcon.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<div class="flex flex-col gap-2">
	<h1
		class="font xl:tracking-in-expand text-center text-3xl font-semibold text-gray-900 [text-wrap:balance] dark:text-gray-100 sm:text-[2.75rem] md:text-start 2xl:text-6xl"
	>
		{t("home.title.greeting")}
		<span
			class="inline-flex bg-gradient-to-r from-gray-900 via-indigo-400 bg-[200%_auto] bg-clip-text leading-loose text-transparent dark:from-gray-100 dark:via-violet-400"
		>
			Santiago
		</span>
	</h1>
	<p
		class="xl:tracking-in-expand relative flex items-center justify-center gap-1 text-center text-gray-900 dark:text-gray-100 md:-top-4 xl:text-start"
	>
		<span>{t("home.title.a")}</span>
		<span class="text-indigo-400 dark:text-violet-400">
			{t("home.title.systems-engineer")}
		</span>
		<span class="inline">{t("home.title.from-colombia")}</span>
		<ColombiaIcon class="h-4 w-6" />
	</p>
</div>
