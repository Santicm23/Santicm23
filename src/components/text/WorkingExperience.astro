---
import { translate } from "@/utils/translate"
import Timeline from "./Timeline.astro"

const { pathname } = Astro.url

const [july, november, now, headOfDevelopment, studentTutor, dataStructures, introProgramming] = translate({
	"en": ["July", "November", "Now", "Head of development", "Student tutor", "Data structures", "Introduction to programming"],
	"es": ["Julio", "Noviembre", "Actualmente", "Jefe de desarrollo", "Monitor", "Estructuras de datos", "Introducción a la programación"],
	"fr": ["Juillet", "Novembre", "Actuellement", "Chef de développement", "Moniteur", "Structures de données", "Introduction à la programmation"],
	"pt": ["Julho", "Novembro", "Atualmente", "Chefe de desenvolvimento", "Monitor", "Estruturas de dados", "Introdução à programação"],
}, pathname)

const dataRanges = [
	{
		date: `${july} 2024 → ${now}`,
		title: headOfDevelopment!,
		description: "Bucks",
		current: true,
	},
	{
		date: `${july} 2023 → ${november} 2023`,
		title: `${studentTutor} - ${dataStructures}`,
		description: "Pontificia Universidad Javeriana",
	},
	{
		date: `${july} 2022 → ${november} 2022`,
		title: `${studentTutor} - ${introProgramming}`,
		description: "Pontificia Universidad Javeriana",
	},
]
---

<Timeline dateRanges={dataRanges} />
