---
import Timeline from "@/components/text/Timeline.astro"
import { getLangFromUrl, useTranslations } from "@/utils/i18n"

const lang = getLangFromUrl(Astro.url)

const t = useTranslations(lang)

const dataRanges = [
	{
		date: `${t("calendar.july")} 2021 → ${t("calendar.now")}`,
		title: t("education.puj.career"),
		institution: "Pontificia Universidad Javeriana",
		institutionUrl: "https://www.javeriana.edu.co/",
		current: true,
	},
	{
		date: `${t("calendar.september")} 2007 → ${t("calendar.july")} 2021`,
		title: t("education.lfb.title"),
		institution: "Lycée Français Louis Pasteur",
		institutionUrl: "https://www.lfbogota.com/",
	},
]
---

<Timeline dateRanges={dataRanges} />
