---
interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<div class:list={["container", className]}>
	<div class="cube"><div class="cube__inner bg-indigo-400 dark:bg-violet-400"></div></div>
	<div class="cube"><div class="cube__inner bg-indigo-400 dark:bg-violet-400"></div></div>
	<div class="cube"><div class="cube__inner bg-indigo-400 dark:bg-violet-400"></div></div>
</div>

<style>
	.container {
		--uib-size: 45px;
		--uib-speed: 3s;
		display: flex;
		align-items: flex-end;
		padding-bottom: 20%;
		justify-content: space-between;
		width: var(--uib-size);
		height: calc(var(--uib-size) * 0.6);
	}

	.cube {
		flex-shrink: 0;
		width: calc(var(--uib-size) * 0.2);
		height: calc(var(--uib-size) * 0.2);
		animation: jump var(--uib-speed) ease-in-out infinite;
	}

	.cube__inner {
		height: 100%;
		width: 100%;
		border-radius: 25%;
		transform-origin: center bottom;
		animation: morph var(--uib-speed) ease-in-out infinite;
		transition: background-color 0.3s ease;
	}

	.cube:nth-child(2) {
		animation-delay: calc(var(--uib-speed) * -0.18);
	}

	.cube:nth-child(2) .cube__inner {
		animation-delay: calc(var(--uib-speed) * -0.18);
	}

	.cube:nth-child(3) {
		animation-delay: calc(var(--uib-speed) * -0.1);
	}

	.cube:nth-child(3) .cube__inner {
		animation-delay: calc(var(--uib-speed) * -0.1);
	}

	@keyframes jump {
		0% {
			transform: translateY(0px);
		}

		15% {
			transform: translateY(0px);
			animation-timing-function: ease-out;
		}

		25% {
			transform: translateY(-200%);
			animation-timing-function: ease-in;
		}

		37.5% {
			transform: translateY(0px);
			animation-timing-function: ease-in;
		}
	}

	@keyframes morph {
		0% {
			transform: scaleY(1);
		}

		5% {
			transform: scaleY(1);
		}

		10%,
		12.5% {
			transform: scaleY(0.6) scaleX(1.3);
			animation-timing-function: ease-in-out;
		}

		15% {
			transform: scaleY(1.15) scaleX(0.9);
			animation-timing-function: ease-in-out;
		}

		20% {
			transform: scaleY(1);
		}

		35%,
		47.5%,
		50% {
			transform: scaleY(1);
		}

		37.5% {
			transform: scaleY(0.8) scaleX(1.2);
		}
	}
</style>
