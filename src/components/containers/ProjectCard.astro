---
import { Image } from "astro:assets"

import type { Project } from "@/models/project"
import GitHubIcon from "../icons/GitHubIcon.astro"
import GlobeIcon from "../icons/GlobeIcon.astro"
import BookIcon from "../icons/BookIcon.astro"
import Chip from "../text/Chip.astro"

interface Props {
	project: Project
}

const { project } = Astro.props
---

<article
	class="fade-in-scroll z-10 flex flex-col rounded-xl border border-white bg-white/20 p-4 shadow-xl outline outline-1 outline-gray-300 dark:border-white/10 dark:bg-gray-700/30 dark:shadow-none dark:outline-gray-700/20"
>
	<Image
		src={project.image}
		alt={project.title}
		class="aspect-[7/4] w-full rounded-xl object-cover shadow-lg"
		height={400}
		width={400}
	/>
	<h2 class="mt-2 font-bold">{project.title}</h2>
	<div class="my-2 flex gap-1">
		{project.tech.map((TechIcon) => <TechIcon class="h-4 w-4" />)}
	</div>
	<p class="text-sm text-gray-400">{project.description}</p>
	<div class="mt-2 flex gap-2">
		{
			project.links.github && (
				<a
					href={project.links.website}
					target="_blank"
					rel="noreferrer"
					class="rounded-full focus:outline-indigo-400 dark:focus:outline-violet-400"
				>
					<Chip class="px-2">
						<GitHubIcon class="w-4 pr-1 transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400" />
						<span class="text-xs transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400">
							Github
						</span>
					</Chip>
				</a>
			)
		}
		{
			project.links.website && (
				<a
					href={project.links.website}
					target="_blank"
					rel="noreferrer"
					class="rounded-full focus:outline-indigo-400 dark:focus:outline-violet-400"
				>
					<Chip class="px-2">
						<GlobeIcon class="w-4 pr-1 transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400" />
						<span class="text-xs transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400">
							Website
						</span>
					</Chip>
				</a>
			)
		}
		{
			project.links.docs && (
				<a
					href={project.links.docs}
					target="_blank"
					rel="noreferrer"
					class="rounded-full focus:outline-indigo-400 dark:focus:outline-violet-400"
				>
					<Chip class="px-2">
						<BookIcon class="w-4 pr-1 transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400" />
						<span class="text-xs transition-colors duration-200 group-hover/chip:text-indigo-400 dark:group-hover/chip:text-violet-400">
							Docs
						</span>
					</Chip>
				</a>
			)
		}
	</div>
</article>
