---
interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<div class={className}>
	<button
		onclick="toggleTheme()"
		class="relative aspect-[2/1] h-8 rounded-full bg-gray-800 shadow-inner [&_*]:rounded-full [&_*]:transition-all [&_*]:duration-500"
	>
		<div
			class="absolute left-[5%] top-[10%] aspect-square h-4/5 content-center bg-yellow-300 dark:ml-[50%] dark:bg-gray-100"
		>
			<div class="absolute left-1/4 top-1/2 h-1/5 w-1/5 dark:bg-gray-300"></div>
			<div class="absolute left-1/2 top-2/3 h-1/5 w-1/5 dark:bg-gray-300"></div>
			<div class="absolute left-1/2 top-1/4 h-1/3 w-1/3 dark:bg-gray-300"></div>
		</div>
	</button>
</div>

<script is:inline>
	function toggleTheme() {
		if (document.documentElement.classList.contains("dark")) {
			document.documentElement.classList.remove("dark")
			localStorage.setItem("theme", "light")
			window.dispatchEvent(new Event('theme-change'));
		} else {
			document.documentElement.classList.add("dark")
			localStorage.setItem("theme", "dark")
			window.dispatchEvent(new Event('theme-change'));
		}
	}
</script>
