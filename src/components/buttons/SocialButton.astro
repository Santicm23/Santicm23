---
interface Props {
	href: string
	name: string
}

const { href, name } = Astro.props
---

<div class="group relative w-min">
	<a href={href} target="_blank" rel="noreferrer">
		<slot />
	</a>
	<span
		class="absolute -bottom-14 left-1/2 z-20 origin-top -translate-x-1/2 scale-0 rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm font-bold text-black shadow-md transition-all duration-300 ease-in-out group-hover:scale-100"
	>
		{name}
		<span></span>
	</span>
</div>
